<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rounded_corner">

        <RelativeLayout
            android:id="@+id/lintitile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_corner_rounded"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:animateLayoutChanges="true"
                android:fontFamily="@font/roboto_bold"
                android:text="Remove Ads, Save Faster!"
                android:textColor="@color/white"
                android:textSize="21sp" />
        </RelativeLayout>


        <ImageView
            android:id="@+id/imgNoAds"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/lintitile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:animateLayoutChanges="true"
            android:elevation="4dp"
            android:src="@drawable/no_ads" />

        <TextView
            android:id="@+id/txtSubText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgNoAds"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:animateLayoutChanges="true"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="No more ads! Just you and your favorite WhatsApp statuses."
            android:textColor="@color/black"
            android:textSize="16sp" />.

        <RelativeLayout
            android:id="@+id/btnRemoveAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtSubText"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_white_rounded_corner"
            android:backgroundTint="@color/blue">

            <TextView
                android:id="@+id/txtRemoveAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:animateLayoutChanges="true"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Remove Ads Now"
                android:textColor="@color/white"
                android:textSize="21sp" />


            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="9dp"
                android:layout_below="@+id/txtRemoveAd"
                android:animateLayoutChanges="true"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="â‚¹50.00 / Year"
                android:visibility="visible"
                android:textColor="@color/white"
                android:textSize="18sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/txtNotNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnRemoveAd"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Not Now"
            android:textColor="#8C8787"
            android:textSize="17sp" />

    </RelativeLayout>

</RelativeLayout>