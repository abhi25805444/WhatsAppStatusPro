<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WhatsappStatusSaver" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/blue</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="tabTextAppearance">@style/CustomTabText</item>
        <!-- Customize color -->
    </style>


    <style name="Theme.WhatsappStatusSaver" parent="Base.Theme.WhatsappStatusSaver" >
        <item name="android:windowSharedElementEnterTransition">@transition/shared_element_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/shared_element_transition</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
</resources>